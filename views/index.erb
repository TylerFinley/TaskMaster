<h1>TaskMaster </h1>

<p>Today's Objectives</p>

<ol>
  <% @tasks.each() do |task| %>
  <li><%= task.description().capitalize %></li>
  <% end %>
</ol>

<form action="/tasks" method='post'>
  <!-- <label for="description"> Create a new task</label> -->
  <input id="description" name="description" type="text">
  <button type="submit" class="btn btn-danger">Create a new task</button>
</form>

<form action="/clear">
  <button type="submit" class="btn btn-primary">Clear</button>
</form>
